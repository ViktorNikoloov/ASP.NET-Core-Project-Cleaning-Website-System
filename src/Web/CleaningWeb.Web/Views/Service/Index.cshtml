@using CleaningWeb.Web.ViewModels.Service
@model ServiceListViewModel

@{
    this.ViewData["Title"] = "Service";
}

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center pb-5 mb-3">
            <div class="col-md-7 heading-section text-center ftco-animate">
                <span class="subheading">Services</span>
                <h2>How We Works</h2>
            </div>
        </div>
        <div class="row">
            @foreach (var service in Model.Services)
            {
                <div class="col-md-6 col-lg-4 services ftco-animate">
                    <div class="d-block d-flex">
                        <div class="icon d-flex justify-content-center align-items-center">
                                <img src="@service.Image" alt="@service.Title" style="width: 100%; height: 100%;" />
                        </div>
                        <div class="media-body pl-3">
                            <h3 class="heading">@service.Title</h3>
                            <p>@service.ShortDescription</p>
                            <p><a asp-controller="Service" asp-action="@service.Url" class="btn-custom">Read more</a></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>